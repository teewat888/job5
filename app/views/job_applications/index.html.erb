<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Job applications</h1>
    <%= link_to 'New job application', new_job_application_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "rounded-lg py-3 px-5 bg-red-600 text-white block font-medium" %>
  </div>


  <div class="container px-4 mx-auto">
    <div class="pt-4 bg-white shadow rounded">
      <div class="flex px-6 pb-4 border-b">
        <h3 class="text-xl font-bold">Recent job application</h3>
      </div>
      <div class="p-4 overflow-x-auto">
        <table class="table-auto w-full">
          <thead>
            <tr class="text-xs text-gray-500 text-left"><th class="pb-3 font-medium">Apply date</th><th class="pb-3 font-medium">Job Role</th><th class="pb-3 font-medium">Company</th><th class="pb-3 font-medium">Action</th></tr>
          </thead>
          <tbody>
           <div id="job_applications" class="min-w-full">
            <%= render @job_applications %>
          </div>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
 
</div>
